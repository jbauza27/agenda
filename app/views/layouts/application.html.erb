<!DOCTYPE html>
<html>
  <head>
    <title><%= @titulo_de_pagina %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'general', media: 'all' %>
    <%= stylesheet_link_tag "#{controller.controller_name}", media: 'all' %>    
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'general', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "#{controller.controller_name}-#{controller.action_name}", 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div id="wrapper">
      <!-- Navigation -->
      <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Agenda</a>          
        </div>
        <!-- /.navbar-header -->

        <ul class="nav navbar-top-links navbar-right">
          <li>
            <%= link_to "Listar", { controller: "persona", action: "index" }, { :class => 'color_gris'} %>            
          </li>
          <li>
            <%= link_to "Crear", { controller: "persona", action: "new" }, { :class => 'color_gris'} %>            
          </li>          
        </ul>
      <!-- /.navbar-top-links -->
      </nav>
    </div>

    <%= yield %>      
        
  </body>
</html>